{
  "name": "node-starter",
  "version": "0.0.0",
  "type": "module",
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "scripts": {
    "start": "npx jest --watchAll",
    "jest:watch": "npx jest --watchAll"
  },
  "dependencies": {
    "jest": "^27.3.1",
    "rxjs": "^7.5.5",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.1",
    "typescript": "^4.4.4",
    "@types/jest": "^27.0.2"
  }
}
